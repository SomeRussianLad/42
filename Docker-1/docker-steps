brew install docker
brew install docker-machine
brew install docker-compose


Восстановление работы:
        docker-machine regenerate-certs Char
        eval $(docker-machine env Char)

version: '3.3'

services:
   spawning-pool:
     image: mysql:5.7
     volumes:
       - hatchery:/var/lib/mysql
     restart: on-failure
     environment:
       MYSQL_ROOT_PASSWORD: Kerrigan
       MYSQL_DATABASE: zerglings

   lair:
     depends_on:
       - spawning-pool
     image: wordpress:latest
     ports:
       - "8080:80"
     restart: always
     environment:
       WORDPRESS_DB_HOST: spawning-pool:3306
       WORDPRESS_DB_USER: root
       WORDPRESS_DB_PASSWORD: Kerrigan
       WORDPRESS_DB_NAME: zerglings
volumes:
    hatchery: {}